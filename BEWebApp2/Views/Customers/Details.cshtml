@model IEnumerable<BEWebApp2.Models.Customer>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin đơn hàng</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalValue)
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalValue)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.ProImage)" width="100" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SupName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TotalValue)
                </td>
            </tr>
            <tr>
                @Html.DisplayFor(modelItem => item.TotalValue)
            </tr>
        }
    </table>
</div> 
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
